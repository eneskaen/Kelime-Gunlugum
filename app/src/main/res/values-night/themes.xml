<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark mode colors -->
    <!-- Screen background if light mode on -->
    <style name="Screen">
        <item name="android:background">#40276F</item>
    </style>

    <!-- Text color if dark mode on -->
    <style name="Text">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Button background if dark mode on -->
    <style name="Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#40276F</item>
        <item name="cornerRadius">15dp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <!-- TextInputLayout background if dark mode on -->
    <style name="TextInputLayout">
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="hintTextColor">#80FFFFFF</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="cursorColor">#FFFFFF</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!-- TextInputEditText background if dark mode on -->
    <style name="TextInputEditText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Card" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="background">@drawable/cardview_button_ripple</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="TextInButton">
        <item name="android:textColor">#40276F</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
