<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark mode colors -->
    <!-- Screen background if light mode on -->
    <style name="Screen">
        <item name="android:background">#40276F</item>
    </style>

    <!-- Text color if dark mode on -->
    <style name="Text">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Button background if dark mode on -->
    <style name="Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:background">@drawable/rounded_corner_button_bg_dark</item>
        <item name="android:textColor">#40276F</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- TextInputLayout background if dark mode on -->
    <style name="TextInputLayout">
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="hintTextColor">#80FFFFFF</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="boxStrokeErrorColor">#FFFFFF</item>
        <item name="cursorColor">#FFFFFF</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!-- TextInputEditText background if dark mode on -->
    <style name="TextInputEditText">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
