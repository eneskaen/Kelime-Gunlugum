<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App'ın varsayılan teması -->
    <style name="Theme.KelimeGunlugu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Tema öğelerini buraya ekleyebilirsin -->
    </style>

    <!-- Light mode colors -->
    <!-- Screen background if light mode on -->
    <style name="Screen" parent="Theme.Material3.Light">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text color if light mode on -->
    <style name="Text">
        <item name="android:textColor">#40276F</item>
    </style>

    <!-- Button background if light mode on -->
    <style name="Button" parent="Widget.Material3.Button.ElevatedButton" >
        <item name="android:background">@drawable/rounded_corner_button_bg</item>
        <item name="android:textColor">#FFF</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- TextInputLayout background if light mode on -->
    <style name="TextInputLayout">
        <item name="android:textColorHint">#8040276F</item>
        <item name="android:textColor">#40276F</item>
        <item name="hintTextColor">#8040276F</item>
        <item name="boxStrokeColor">#40276F</item>
        <item name="cursorColor">#40276F</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!-- TextInputEditText background if light mode on -->
    <style name="TextInputEditText">
        <item name="android:textColor">#40276F</item>
    </style>
</resources>
